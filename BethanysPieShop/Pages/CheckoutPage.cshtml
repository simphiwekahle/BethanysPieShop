@page
@model BethanysPieShop.Pages.CheckoutPageModel

<form method="post" role="form">
    <h3 class="my-5">
        You are one step away from your delicious pies.
    </h3>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="col-6">
        <div class="row g-2">
            <div class="col-12">
                <label asp-for="Order.FirstName" class="form-lable"></label>
                <input asp-for="Order.FirstName" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Order.LastName" class="form-lable"></label>
                <input asp-for="Order.LastName" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Order.AddressLine1" class="form-lable"></label>
                <input asp-for="Order.AddressLine1" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Order.AddressLine2" class="form-lable"></label>
                <input asp-for="Order.AddressLine2" class="form-control" />
            </div>

            <div class="col-6">
                <label asp-for="Order.City" class="form-lable"></label>
                <input asp-for="Order.City" class="form-control" />
            </div>

            <div class="col-6">
                <label asp-for="Order.Province" class="form-lable"></label>
                <input asp-for="Order.Province" class="form-control" />
            </div>

            <div class="col-6">
                <label asp-for="Order.ZipCode" class="form-lable"></label>
                <input asp-for="Order.ZipCode" class="form-control" />
            </div>

            <div class="col-6">
                <label asp-for="Order.Country" class="form-lable"></label>
                <input asp-for="Order.Country" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Order.Email" class="form-lable"></label>
                <input asp-for="Order.Email" class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Order.PhoneNumber" class="form-lable"></label>
                <input asp-for="Order.PhoneNumber" class="form-control" />
            </div>
        </div>

        <div class="mt-2">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-secondary" value="Complete Order" />
            </div>
        </div>
    </div>
</form>
